<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <com.sharvari.womenempowerment.Utils.RoundedImageView
                android:id="@+id/image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sharvari Divekar"
                android:id="@+id/uploader"
                android:textSize="16dp"
                android:textColor="@color/bgBottomNavigation"
                android:layout_toEndOf="@+id/image_view"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="January 1, 2018 - 10:00 PM"
                android:layout_below="@+id/uploader"
                android:layout_toEndOf="@+id/image_view"
                android:layout_marginLeft="10dp"
                android:id="@+id/datetime"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I want someone to cook food at my home. Food need to be made for 3 head count."
                android:id="@+id/task_details"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/datetime"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_home"
                android:id="@+id/ic_location"
                android:layout_below="@+id/task_details"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parel, Mumbai"
                android:textColor="#000"
                android:layout_marginTop="3dp"
                android:id="@+id/task_location"
                android:layout_toEndOf="@+id/ic_location"
                android:layout_below="@+id/task_details"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/task_details"
                android:src="@drawable/ic_right_arrow"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>